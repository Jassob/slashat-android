<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:padding="24dp">

    <fragment
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:name="se.slashat.slashapp.fragments.episode.EpisodeListFragment"
            android:id="@+id/listfragment"
            android:layout_marginBottom="12dp"
            android:layout_gravity="left|center_vertical"
            tools:layout="@layout/episode_list"/>
    <fragment
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="12dp"
            android:name="se.slashat.slashapp.fragments.episode.EpisodeDetailFragment"
            android:id="@+id/detailfragment"
            tools:layout="@layout/episode_detail"/>

</LinearLayout>