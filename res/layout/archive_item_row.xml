<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/card_bg"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:ignore="UseCompoundDrawables,HardcodedText,ContentDescription" >

    <TextView
        android:id="@+id/episodeNumber"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingRight="4dp"
        android:paddingLeft="6dp"
        android:text="#219"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />
    
        <View
    android:layout_width="1dp"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:background="#dddddd"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/episodeTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="Alla lyssnar pÃ¥ slashat blah blah blah"
            android:textColor="#000000"
            android:textSize="18sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/dateAndLength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="22 jan 2013 - 1:07:45"
            android:textColor="#000000"
            android:textSize="12sp"
            android:typeface="serif" />

    </LinearLayout>

    <View
    android:layout_width="1dp"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:background="#dddddd"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_media_play" />

        <TextView
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="111m"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>